<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextureView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="match_parent"
        android:id="@+id/texture"/>

    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/l1"
        android:id="@+id/timer">

        <TextView
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:fontFamily="@font/gruppo"
            android:textSize="20dp"
            android:background="@android:color/holo_red_dark"
            android:textColor="@color/white"
            android:id="@+id/clock"/>
    </LinearLayout>
    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/l1"
        android:visibility="gone"
        android:background="@drawable/dark_trans"
        android:id="@+id/last_recorded_box">
        <ToggleButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/baseline_play_arrow_24"
            android:id="@+id/last_play"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/last_filename"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_mode_edit_24"
            android:layout_gravity="end"
            android:id="@+id/last_edit"/>
        <Button
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_margin="0dp"
            android:padding="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/share_last"
            android:background="@drawable/baseline_share_24"/>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/dark_trans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/l1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:rotation="90"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ToggleButton
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:textOn=""
                android:scaleY=".6"
                android:rotation="-90"
                android:scaleX=".6"
                android:id="@+id/preview"
                android:textOff=""
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/baseline_volume_up_24"/>
            <TextView
                android:layout_marginTop="-10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:enabled="false"
                android:fontFamily="@font/montserrat"
                android:text="Preview"
                android:textAlignment="viewEnd"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>
        <ToggleButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textOff=""
            android:textOn=""
            android:id="@+id/orientation"
            android:background="@android:color/transparent"/>

        <ToggleButton
            android:textOff=""
            android:textOn=""
            android:scaleY=".6"
            android:scaleX=".6"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_tune_24"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/show_effects"/>
        <ToggleButton
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textOff=""
            android:scaleY=".6"
            android:scaleX=".6"
            android:drawableTop="@drawable/record_1"
            android:textOn=""
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:id="@+id/record"
            android:gravity="center">
        </ToggleButton>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ToggleButton
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textOff=""
                android:textOn=""
                android:visibility="gone"
                android:id="@+id/pause"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/baseline_pause_circle_outline_24"/>
            <ToggleButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textOff=""
                android:textOn=""
                android:id="@+id/swap"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/baseline_refresh_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:enabled="false"
                android:fontFamily="@font/montserrat"
                android:text="Pause"
                android:visibility="gone"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
        <Button
            android:textOff=""
            android:textOn=""
            android:scaleY=".6"
            android:scaleX=".6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_library_music_24"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/recordings"/>
        <Button
            android:textOff=""
            android:textOn=""
            android:scaleY=".6"
            android:scaleX=".6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/outline_settings_applications_24"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/settings_button"/>
        <Button
            android:visibility="gone"
            android:layout_gravity="end"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_terminal_24"
            android:id="@+id/test"/>

    </LinearLayout>
    <FrameLayout
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/l1"
        android:layout_height="wrap_content"
        android:id="@+id/frame">
        <SurfaceView
            android:layout_gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/video"
            android:visibility="visible"
            />

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l2"
        app:layout_constraintBottom_toTopOf="@id/effects"
        app:layout_constraintTop_toBottomOf="@id/l1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal">
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/effects"
        app:layout_constrainedHeight="true"

        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/last_recorded_box"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/l3"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:background="@drawable/dark_trans"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Presets"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/presets"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/baseline_save_24"
                android:id="@+id/add_preset"/>
            <Button
                android:layout_width="30dp"
                android:id="@+id/delete_preset"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/baseline_delete_forever_24"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/recycler"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>